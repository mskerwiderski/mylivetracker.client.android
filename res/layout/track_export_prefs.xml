<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>    
   <TextView
        android:paddingTop="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" 
        android:textSize="18sp"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:text="@string/lbTrackExportPrefs_FilenameCreationRules"
        android:textColor="@color/colorText" 
    />
   <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="45dp"
        android:padding="5dp">
    	<TextView
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp" 
	        android:textSize="16sp"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content" 
	        android:text="@string/lbTrackExportPrefs_FilenamePrefix"
	        android:textColor="@color/colorText" 
	    />
	    <EditText
	        android:id="@+id/etTrackExportPrefs_FilenamePrefix"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:inputType="text"
	        android:singleLine="true"
	        android:text="" />
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendTrackName"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendTrackName"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendTimestampOfFirstPosition"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendTimestampOfFirstPosition"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendTimestampOfLastPosition"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendTimestampOfLastPosition"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendSequenceNumber"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendSequenceNumber"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>
	<TextView
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" 
        android:textSize="16sp"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:text="@string/lbTrackExportPrefs_FilenameNextSequenceNumber"
        android:textColor="@color/colorText" 
    />
	<LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="45dp"
        android:padding="5dp">
	    <EditText
	        android:id="@+id/etTrackExportPrefs_FilenameNextSequenceNumber"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:inputType="number"
	        android:singleLine="true"
	        android:textColor="@color/colorWhite"
	        android:text="" 
	    />
	    <Button
	        android:id="@+id/btTrackExportPrefs_FilenameResetSequenceNumber"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:text="@string/btTrackExportPrefs_FilenameResetSequenceNumber" 
	    />
    </LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">        
        <Button
        	android:id="@+id/btTrackExportPrefs_Save" 
        	android:text="@string/btSave"
        	android:layout_height="50dp"
        	android:layout_width="fill_parent"
        	android:layout_weight="1" 
			android:layout_gravity="bottom"
        />
        <Button
        	android:id="@+id/btTrackExportPrefs_Cancel"
        	android:text="@string/btCancel"
        	android:layout_height="50dp" 
        	android:layout_width="fill_parent"         	
        	android:layout_weight="1" 
       	 	android:layout_gravity="bottom"
        />
    </LinearLayout>  
</LinearLayout> 
