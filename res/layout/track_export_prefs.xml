<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>    
   <TextView
        android:paddingTop="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" 
        android:textSize="18sp"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:text="@string/lbTrackExportPrefs_FilenameCreationRules"
        android:textColor="@color/colorText" 
    />
   <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="45dip"
        android:padding="5dip">
    	<TextView
	        android:paddingTop="10dip"
	        android:paddingLeft="5dip"
	        android:paddingRight="5dip" 
	        android:textSize="16sp"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content" 
	        android:text="@string/lbTrackExportPrefs_FilenamePrefix"
	        android:textColor="@color/colorText" 
	    />
	    <EditText
	        android:id="@+id/etTrackExportPrefs_FilenamePrefix"
	        android:layout_width="fill_parent"
	        android:layout_height="40dip"
	        android:inputType="text"
	        android:singleLine="true"
	        android:text="" />
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendTrackName"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendTrackName"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dip" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dip"
	       	android:paddingRight="5dip" 
	    />
	</LinearLayout>
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendTimestampOfTrackStartTime"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendTimestampOfTrackStartTime"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dip" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dip"
	       	android:paddingRight="5dip" 
	    />
	</LinearLayout>
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
	    <CheckBox
	    	android:id="@+id/cbTrackExportPrefs_FilenameAppendSequenceNumber"
	    	android:text="@string/lbTrackExportPrefs_FilenameAppendSequenceNumber"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dip" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dip"
	       	android:paddingRight="5dip" 
	    />
	</LinearLayout>
	<TextView
        android:paddingTop="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="5dip" 
        android:textSize="16sp"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:text="@string/lbTrackExportPrefs_FilenameNextSequenceNumber"
        android:textColor="@color/colorText" 
    />
	<LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="45dip"
        android:padding="5dip">
	    <EditText
	        android:id="@+id/etTrackExportPrefs_FilenameNextSequenceNumber"
	        android:layout_width="fill_parent"
	        android:layout_height="40dip"
	        android:layout_weight="1"
	        android:inputType="number"
	        android:singleLine="true"
	        android:textColor="@color/colorWhite"
	        android:text="" 
	    />
	    <Button
	        android:id="@+id/btTrackExportPrefs_FilenameResetSequenceNumber"
	        android:layout_width="fill_parent"
	        android:layout_height="40dip"
	        android:layout_weight="1"
	        android:text="@string/btTrackExportPrefs_FilenameResetSequenceNumber" 
	    />
    </LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">        
        <Button
        	android:id="@+id/btTrackExportPrefs_Save" 
        	android:text="@string/btSave"
        	android:layout_height="50dip"
        	android:layout_width="fill_parent"
        	android:layout_weight="1" 
			android:layout_gravity="bottom"
        />
        <Button
        	android:id="@+id/btTrackExportPrefs_Cancel"
        	android:text="@string/btCancel"
        	android:layout_height="50dip" 
        	android:layout_width="fill_parent"         	
        	android:layout_weight="1" 
       	 	android:layout_gravity="bottom"
        />
    </LinearLayout>  
</LinearLayout> 
