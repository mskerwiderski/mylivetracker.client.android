<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingTop="4dip"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
        <TextView
            android:id="@+id/tvOtherPrefs_ConfirmLevel"
        	android:text="@string/lbOtherPrefs_ConfirmLevel" 
        	android:textColor="@color/colorText"
        	android:layout_weight="1" 
        	android:layout_height="wrap_content" 
        	android:layout_width="0dip" 
        	android:gravity="left"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
        <Spinner
        	android:id="@+id/spOtherPrefs_ConfirmLevel"         	 
        	android:layout_height="40dip"
        	android:layout_width="fill_parent" 
        />    	    	        
    </LinearLayout>
    <LinearLayout 
      	android:layout_height="wrap_content" 
      	android:layout_width="fill_parent"
      	android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
        <TextView
            android:id="@+id/tvOtherPrefs_TrackingOneTouch"
        	android:text="@string/lbOtherPrefs_TrackingOneTouch" 
        	android:textColor="@color/colorText"
        	android:layout_weight="1" 
        	android:layout_height="wrap_content" 
        	android:layout_width="0dip" 
        	android:gravity="left"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
        <Spinner
        	android:id="@+id/spOtherPrefs_TrackingOneTouch"         	 
        	android:layout_height="40dip"
        	android:layout_width="fill_parent" 
        />    	    	        
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
	    <CheckBox
	    	android:id="@+id/cbOtherPrefs_AdaptButtonsForOneTouchMode"
	    	android:text="@string/lbOtherPrefs_AdaptButtonsForOneTouchMode"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dip" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dip"
	       	android:paddingRight="5dip" 
	    />
	</LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
	    <CheckBox
	    	android:id="@+id/cbOtherPrefs_EnableAntPlusIfAvailable"
	    	android:text="@string/lbOtherPrefs_EnableAntPlusIfAvailable"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dip" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dip"
	       	android:paddingRight="5dip" 
	    />
	</LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingTop="5dip">
    	<Button 
    		android:id="@+id/btOtherPrefs_ResetOverallMileage"
    		android:text="@string/btOtherPrefs_ResetOverallMileage"
    		android:layout_gravity="bottom"
    		android:layout_weight="1"     		 
    		android:layout_height="50dip"
    		android:layout_width="0dip"     		     		 
    	/>
    </LinearLayout>    
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingTop="5dip">
    	<Button
    		android:id="@+id/btOtherPrefs_ResetToFactoryDefaults"
    		android:text="@string/btOtherPrefs_ResetToFactoryDefaults" 
    		android:layout_gravity="bottom" 
    		android:layout_weight="1"
    		android:layout_height="50dip" 
    		android:layout_width="0dip" 
    	/>    	        
    </LinearLayout>    
	<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" >
        <Button
        	android:id="@+id/btOtherPrefs_Save"
        	android:text="@string/btSave"  
        	android:layout_gravity="bottom" 
        	android:layout_weight="1"
        	android:layout_height="50dip" 
        	android:layout_width="fill_parent"         	 
        />
        <!-- Liontrack customization. -->
        <Button
        	android:id="@+id/btOtherPrefs_Back"
        	android:text="@string/btBack"
        	android:layout_gravity="bottom" 
        	android:layout_weight="1" 
        	android:layout_height="50dip" 
        	android:layout_width="fill_parent" 
        />
    </LinearLayout>       
</LinearLayout> 
