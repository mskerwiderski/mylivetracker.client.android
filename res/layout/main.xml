<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@color/colorBackground"
    >  
    <LinearLayout
        android:paddingTop="2dip" 
        android:gravity="center_vertical|center_horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <ToggleButton
        	android:id="@+id/btMain_ConnectDisconnectAnt"
        	android:textSize="7pt"
        	android:textOn="@string/btMain_AntPlus" 
        	android:textOff="@string/btMain_AntPlus"
        	android:layout_height="60dip" 
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_gravity="top"
        />
        <ToggleButton
        	android:id="@+id/btMain_LocationListenerOnOff"
        	android:textSize="7pt"
        	android:textOn="@string/btMain_LocationListener" 
        	android:textOff="@string/btMain_LocationListener" 
        	android:layout_height="60dip" 
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_gravity="top" 
        />
        <ToggleButton
        	android:id="@+id/btMain_StartStopTrack"
        	android:textSize="7pt"
        	android:textOn="@string/btMain_Tracking" 
        	android:textOff="@string/btMain_Tracking"         	 
        	android:layout_height="60dip" 
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:layout_gravity="top"
        />
    </LinearLayout>    
    <LinearLayout     	 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
   	    <TextView
   	        android:id="@+id/tvMain_HeadAutoStartIndicator"
       		android:text="@string/tvMain_AutoStartIndicator"
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
   	    <TextView
   	        android:id="@+id/tvMain_HeadAutoModeIndicator"
       		android:text="@string/tvMain_AutoModeIndicator"
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
       	<TextView
       	    android:id="@+id/tvMain_HeadLocalizationIndicator"
       		android:text="@string/tvMain_LocalizationIndicator"
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
       	<TextView
       	    android:id="@+id/tvMain_HeadWirelessLanIndicator"
       		android:text="@string/tvMain_WirelessLanIndicator"
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
       	<TextView
       	    android:id="@+id/tvMain_HeadMobileNetworkIndicator"
       		android:text="@string/tvMain_MobileNetworkIndicator"
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
    </LinearLayout>           
    <LinearLayout
        android:paddingTop="2dip"     	 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
   	    <TextView
       		android:id="@+id/tvMain_AutoStartIndicator" 
       		android:text=""
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
   	    <TextView
       		android:id="@+id/tvMain_AutoModeIndicator" 
       		android:text=""
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
       	<TextView
       		android:id="@+id/tvMain_LocalizationIndicator" 
       		android:text=""
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
       	<TextView
       		android:id="@+id/tvMain_WirelessLanIndicator" 
       		android:text=""
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
       	<TextView
       		android:id="@+id/tvMain_MobileNetworkIndicator" 
       		android:text=""
       		android:textSize="5pt"
       		android:textColor="#000000"
       		android:background="#d4d0c8"
       		android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="22dip"
			android:layout_width="0dp"
			android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"   	                              		 
       	/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="2dip"     	
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
		<TextView
			android:text="@string/tvMain_Runtime"
			android:textSize="9pt"
			android:textColor="#000000"
			android:background="#d4d0c8"
			android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="37dip" 
			android:layout_width="0dp"
            android:layout_weight="1"	  
            android:gravity="center_vertical|center_horizontal"                       
           />
        <Chronometer
        	android:id="@+id/tvMain_Runtime" 
        	android:text=""
        	android:textSize="9pt"
        	android:textColor="#000000"
        	android:background="#d4d0c8"
        	android:layout_gravity="center"
        	android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="37dip" 
			android:layout_width="0dp"
            android:layout_weight="1"    
        	android:gravity="center_vertical|center_horizontal" 
        />	 	 	        	              
	</LinearLayout>
    <LinearLayout
        android:paddingTop="3dip"     	
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
		<TextView
			android:text="@string/tvMain_Distance"
			android:textSize="9pt"
			android:textColor="#000000"
			android:background="#d4d0c8"
			android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="37dip" 
			android:layout_width="0dp"
            android:layout_weight="1"	  
            android:gravity="center_vertical|center_horizontal"                       
           />
		<TextView
        	android:id="@+id/tvMain_Distance"
        	android:text=""
        	android:textSize="9pt"
        	android:textColor="#000000"
        	android:background="#d4d0c8" 
        	android:layout_gravity="center"
        	android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
        	android:layout_height="37dip" 
			android:layout_width="0dp"	            
            android:layout_weight="1"	 
            android:gravity="center_vertical|center_horizontal"	             
        />	 	               
	</LinearLayout>
    <LinearLayout
        android:id="@+id/llMain_Heartrate"
        android:paddingTop="3dip"     	
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
		<TextView
			android:text="@string/tvMain_Heartrate"
			android:textSize="9pt"
			android:textColor="#000000"
			android:background="#d4d0c8"
			android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="37dip" 
			android:layout_width="0dp"
            android:layout_weight="1"	  
            android:gravity="center_vertical|center_horizontal"                       
           />			
       <TextView
        	android:id="@+id/tvMain_Heartrate"
        	android:text=""
        	android:textSize="9pt"
        	android:textColor="#000000"
        	android:background="#d4d0c8" 
        	android:layout_gravity="center"
        	android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
        	android:layout_height="37dip" 
			android:layout_width="0dp"	            
            android:layout_weight="1"	 
            android:gravity="center_vertical|center_horizontal"	             
        />		       	              
	</LinearLayout>
    <LinearLayout
        android:paddingTop="3dip"     	
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
		<TextView
			android:text="@string/tvMain_Location"
			android:textSize="9pt"
			android:textColor="#000000"
			android:background="#d4d0c8"
			android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="37dip" 
			android:layout_width="0dp"
            android:layout_weight="1"	  
            android:gravity="center_vertical|center_horizontal"                       
           />
           <TextView
        	android:id="@+id/tvMain_Location"
        	android:text=""
        	android:textSize="9pt"
        	android:textColor="#000000"
        	android:background="#d4d0c8"	        	
        	android:layout_gravity="center"
        	android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
        	android:layout_height="37dip" 
			android:layout_width="0dp"	            
            android:layout_weight="1"	 
            android:gravity="center_vertical|center_horizontal"	     
            android:clickable="true"      	              
        />			
	</LinearLayout>	
    <LinearLayout
        android:paddingTop="3dip"     	
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
		android:layout_gravity="bottom" 
		android:gravity="center_vertical|center_horizontal" >
		<TextView
			android:text="@string/tvMain_Uploader"
			android:textSize="9pt"
			android:textColor="#000000"
			android:background="#d4d0c8"
			android:layout_gravity="center"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_height="37dip" 
			android:layout_width="0dp"
            android:layout_weight="1"	  
            android:gravity="center_vertical|center_horizontal"                       
           />	
           <TextView
        	android:id="@+id/tvMain_Uploader"
        	android:text=""
        	android:textSize="9pt"
        	android:textColor="#000000"
        	android:background="#d4d0c8" 
        	android:layout_gravity="center"
        	android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
        	android:layout_height="37dip" 
			android:layout_width="0dp"	            
            android:layout_weight="1"	 
            android:gravity="center_vertical|center_horizontal"	             
        />				        	 	              
	</LinearLayout>
	<LinearLayout 		
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent" 
		android:gravity="center_vertical|center_horizontal" >
        <Button         	 
        	android:id="@+id/btMain_SendMessage" 
        	android:text="@string/btMain_SendMessage"
        	android:textSize="7pt" 
        	android:layout_height="60dip"
        	android:layout_width="0dp" 
        	android:layout_weight="1" 
        	android:layout_gravity="bottom" 
        />
        <Button 
        	android:id="@+id/btMain_SendSos" 
        	android:text="@string/btMain_SendSos"
    		android:textSize="7pt" 
    		android:textColor="@color/colorTextSos"
    		android:layout_height="60dip"
    		android:layout_width="0dp" 
    		android:layout_weight="1"
    		android:layout_gravity="bottom" 
        />
        <Button
    		android:id="@+id/btMain_ResetTrack" 
    		android:text="@string/btMain_ResetTrack"
    		android:textSize="7pt" 
    		android:layout_height="60dip"
    		android:layout_width="0dp" 
    		android:layout_weight="1"
    		android:layout_gravity="bottom"     		 
    	/>          
    </LinearLayout>   
</LinearLayout>
