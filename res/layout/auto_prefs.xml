<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>
	<LinearLayout 
        android:paddingTop="4dip"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
    	<CheckBox
		    android:id="@+id/cbAutoPrefs_AutoStart"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textColor="@color/colorText"
		    android:paddingLeft="42dip"
		/>	
    </LinearLayout>
    <LinearLayout 
        android:paddingTop="4dip"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
    	<CheckBox
		    android:id="@+id/cbAutoPrefs_AutoMode"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/lbAutoPrefs_AutoMode"
		    android:textColor="@color/colorText"
		    android:paddingLeft="42dip" 
		/>	
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dip" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent">
        <TextView
            android:textSize="16sp"
        	android:text="@string/txAutoPrefs_ResetTrackMode" 
        	android:textColor="@color/colorText"
        	android:layout_weight="1" 
        	android:layout_height="wrap_content" 
        	android:layout_width="0dip" 
        	android:gravity="left"
        	android:paddingLeft="5dip"
        	android:paddingRight="5dip"
        	android:paddingBottom="3dip"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
       	android:paddingRight="5dip" 
    >
        <Spinner
        	android:id="@+id/spAutoPrefs_ResetTrackMode"         	 
        	android:layout_height="40dip"
        	android:layout_width="fill_parent"
        />    	    	        
    </LinearLayout>
	<LinearLayout
	    android:paddingTop="20dip" 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent">        
        <Button
        	android:id="@+id/btAutoPrefs_Save" 
        	android:text="@string/btSave"
        	android:layout_height="50dip"
        	android:layout_width="fill_parent"
        	android:layout_weight="1" 
			android:layout_gravity="bottom"
        />
        <Button
        	android:id="@+id/btAutoPrefs_Cancel"
        	android:text="@string/btCancel"
        	android:layout_height="50dip" 
        	android:layout_width="fill_parent"         	
        	android:layout_weight="1" 
       	 	android:layout_gravity="bottom"
        />
    </LinearLayout>        
</LinearLayout> 
