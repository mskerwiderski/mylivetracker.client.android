<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
   	android:orientation="vertical" 
   	android:background="@color/colorBackground"
>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
        <TextView 
        	android:text="@string/lbMsg_StatusMessageAsSms"
        	android:textSize="16sp"
        	android:textColor="@color/colorText"
        	android:layout_height="wrap_content" 
        	android:layout_width="80dp"         	 
        	android:gravity="left" 
        />
        <TextView 
        	android:id="@+id/tvMsg_StatusMessageAsSms"
        	android:textSize="16sp"
        	android:textColor="@color/colorBlack"
        	android:paddingLeft="3dp"
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent"         	 
        	android:gravity="left" 
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
        <TextView 
        	android:text="@string/lbMsg_SelectMessageTemplate"
        	android:textSize="16sp"
        	android:textColor="@color/colorText"
        	android:layout_weight="1" 
        	android:layout_height="wrap_content" 
        	android:layout_width="0dp"         	 
        	android:gravity="left" 
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
    	<Spinner
        	android:id="@+id/spMsg_MessageTemplate"         	 
        	android:layout_height="40dp"
        	android:layout_width="fill_parent" 
        />		
    </LinearLayout>
    <TextView
        android:paddingTop="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:text="@string/lbMsg_Message"
        android:textColor="@color/colorText" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
    />
    <LinearLayout 
        android:paddingTop="5dp"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:padding="5dp" 
    >
	    <EditText
	        android:id="@+id/etMsg_Message"
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:inputType="textMultiLine"
	        android:singleLine="false"
	        android:gravity="top"
	        android:text="" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
    	<Button 
    		android:id="@+id/btMsg_MessagePrefs"
    		android:text="@string/btMsg_MessagePrefs"
    		android:layout_gravity="bottom"
    		android:layout_weight="1"     		 
    		android:layout_height="50dp"
    		android:layout_width="0dp"     		     		 
    	/>  
   </LinearLayout>
    <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" >
        <Button
            android:id="@+id/btMsg_Send" 
            android:text="@string/btSend" 
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_weight="1" 
            android:layout_gravity="bottom"
        />
        <Button
            android:id="@+id/btMsg_Cancel" 
            android:text="@string/btCancel" 
            android:layout_width="fill_parent" 
            android:layout_height="50dp" 
            android:layout_weight="1" 
            android:layout_gravity="bottom"
        />
    </LinearLayout>   
</LinearLayout>
