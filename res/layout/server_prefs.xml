<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>
    <TextView
    	android:text="@string/lbServerPrefs_ServerAddressAndPort" 
    	android:textColor="@color/colorText"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"
    	android:paddingTop="4dp"
    	android:paddingLeft="5dp"
       	android:paddingRight="5dp"  
    />
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
    	<EditText
    		android:id="@+id/etServerPrefs_ServerAddress"
    		android:text="" 
    		android:inputType="textUri"
    		android:layout_height="40dp"
    		android:layout_width="fill_parent" 
    		android:layout_weight="1"
    		android:nextFocusDown="@+id/etServerPrefs_ServerPort"
    	/>
		<EditText
			android:id="@+id/etServerPrefs_ServerPort"
			android:text=""
			android:inputType="number"
			android:layout_height="40dp"
			android:layout_width="fill_parent"
			android:layout_weight="2"
			android:nextFocusDown="@+id/etServerPrefs_ServerPath" 
		/>
    </LinearLayout>
    <TextView
    	android:text="@string/lbServerPrefs_ServerPath"
    	android:textColor="@color/colorText"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    />
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <EditText
	    	android:id="@+id/etServerPrefs_ServerPath"
	    	android:text=""
	    	android:inputType="text"
	    	android:layout_height="40dp" 
	    	android:layout_width="fill_parent" 
	    	android:nextFocusDown="@+id/etServerPrefs_SmsReceivers"
	    />
	</LinearLayout>
	<TextView
    	android:text="@string/lbServerPrefs_SmsReceivers"
    	android:textColor="@color/colorText"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    />
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <EditText
	    	android:id="@+id/etServerPrefs_SmsReceivers"
	    	android:text=""
	    	android:inputType="phone"
	    	android:layout_height="40dp" 
	    	android:layout_width="fill_parent" 
	    />
	</LinearLayout>    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">        
        <Button
        	android:id="@+id/btServerPrefs_Save" 
        	android:text="@string/btSave"
        	android:layout_height="50dp"
        	android:layout_width="fill_parent"
        	android:layout_weight="1" 
			android:layout_gravity="bottom"
        />
        <Button
        	android:id="@+id/btServerPrefs_Cancel"
        	android:text="@string/btCancel"
        	android:layout_height="50dp" 
        	android:layout_width="fill_parent"         	
        	android:layout_weight="1" 
       	 	android:layout_gravity="bottom"
        />
    </LinearLayout>   
</LinearLayout>
