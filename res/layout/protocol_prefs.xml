<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>
    <LinearLayout
        android:paddingTop="4dp" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <TextView
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:text="@string/lbProtocolPrefs_TransferProtocol"
	        android:textColor="@color/colorText"
	        android:layout_height="40dp"
    		android:layout_width="fill_parent" 
    		android:layout_weight="3"
	        android:gravity="center"
	    />
	    <Spinner
	        android:id="@+id/spProtocolPrefs_TransferProtocol"
	        android:layout_height="40dp"
    		android:layout_width="fill_parent" 
    		android:layout_weight="1"
	        android:nextFocusDown="@+id/etProtocolPrefs_ServerAddress" 
	    />
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
        <TextView
            android:paddingLeft="5dp"
	       	android:paddingRight="5dp" 
	    	android:text="@string/lbProtocolPrefs_MaxPositionBufferSize"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp"
    		android:layout_width="fill_parent" 
    		android:layout_weight="3"
	        android:gravity="center"     	
	    />
    	<Spinner
        	android:id="@+id/spProtocolPrefs_MaxPositionBufferSize"         	 
        	android:layout_height="40dp"
    		android:layout_width="fill_parent" 
    		android:layout_weight="1" 
        />		
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
  	>
    	<TextView
    		android:text="@string/lbProtocolPrefs_TimeTriggerInSecs"
    		android:textColor="@color/colorText"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent" 
    		android:layout_weight="1" 
			android:gravity="center" 
		/>
    	<TextView
    		android:text="@string/lbProtocolPrefs_TriggerLogic"
    		android:textColor="@color/colorText"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent" 
    		android:layout_weight="1" 
			android:gravity="center" 
		/>
    	<TextView
    		android:text="@string/lbProtocolPrefs_DistanceTriggerInMtr"
    		android:textColor="@color/colorText"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent" 
    		android:layout_weight="1" 
    		android:gravity="center" 
    	/>    	
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
        <Spinner
	    	android:id="@+id/spProtocolPrefs_TimeTriggerInSecs"
	    	android:layout_height="40dp" 
	    	android:layout_width="fill_parent"
	    	android:layout_weight="1" 
	    	android:nextFocusDown="@+id/spProtocolPrefs_TriggerLogic" 
    	/>
        <Spinner
	    	android:id="@+id/spProtocolPrefs_TriggerLogic"
	    	android:layout_height="40dp" 
	    	android:layout_width="fill_parent"
	    	android:layout_weight="1" 
	    	android:nextFocusDown="@+id/spProtocolPrefs_DistanceTriggerInMtr" 
    	/>
        <Spinner
	    	android:id="@+id/spProtocolPrefs_DistanceTriggerInMtr"
	    	android:layout_height="40dp" 
	    	android:layout_width="fill_parent"
	    	android:layout_weight="1" 
	    	android:nextFocusDown="@+id/cbProtocolPrefs_CloseConnectionAfterEveryUpload" 
    	/>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <CheckBox
	    	android:id="@+id/cbProtocolPrefs_CloseConnectionAfterEveryUpload"
	    	android:text="@string/lbProtocolPrefs_CloseConnectionAfterEveryUpload"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >    
	    <CheckBox
	    	android:id="@+id/cbProtocolPrefs_FinishEveryUploadWithALinefeed"
	    	android:text="@string/lbProtocolPrefs_FinishEveryUploadWithALinefeed"   
	    	android:textColor="@color/colorText" 	
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>    
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >    
	    <CheckBox
	    	android:id="@+id/cbProtocolPrefs_UploadPositionOnlyOnce"
	    	android:text="@string/lbProtocolPrefs_UploadPositionsOnlyOnce"   
	    	android:textColor="@color/colorText" 	
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout> 
    <LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp" 
    >
	    <CheckBox
	    	android:id="@+id/cbProtocolPrefs_LogTrackData"
	    	android:text="@string/lbProtocolPrefs_LogTrackData"
	    	android:textColor="@color/colorText"
	    	android:layout_height="40dp" 
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="42dp"
	       	android:paddingRight="5dp" 
	    />
	</LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">        
        <Button
        	android:id="@+id/btProtocolPrefs_Save" 
        	android:text="@string/btSave"
        	android:layout_height="50dp"
        	android:layout_width="fill_parent"
        	android:layout_weight="1" 
			android:layout_gravity="bottom"
        />
        <Button
        	android:id="@+id/btProtocolPrefs_Cancel"
        	android:text="@string/btCancel"
        	android:layout_height="50dp" 
        	android:layout_width="fill_parent"         	
        	android:layout_weight="1" 
       	 	android:layout_gravity="bottom"
        />
    </LinearLayout>   
</LinearLayout>
