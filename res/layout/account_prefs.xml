<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:background="@color/colorBackground"
>
    <TextView 
        android:paddingTop="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:text="@string/lbAccountPrefs_DeviceId"
        android:textColor="@color/colorText"
       	android:layout_height="wrap_content" 
       	android:layout_width="wrap_content" 
    />
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    >    

	    <EditText
	        android:id="@+id/etAccountPrefs_DeviceId"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:inputType="none"
	        android:singleLine="true"
	        android:text="" />

    </LinearLayout>
    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:text="@string/lbAccountPrefs_Username" 
        android:textColor="@color/colorText"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
    />
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    >    

	    <EditText
	        android:id="@+id/etAccountPrefs_Username"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:inputType="text"
	        android:singleLine="true"
	        android:text="" />

    </LinearLayout>
    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:text="@string/lbAccountPrefs_Password"
        android:textColor="@color/colorText"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
    />
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    >    

	    <EditText
	        android:id="@+id/etAccountPrefs_Password"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:inputType="textPassword"
	        android:singleLine="true"
	        android:text="" />

    </LinearLayout>
    <TextView 
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:text="@string/lbAccountPrefs_TrackName"
        android:textColor="@color/colorText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
    />
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    >    
	    <EditText
	        android:id="@+id/etAccountPrefs_TrackName"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:inputType="text"
	        android:singleLine="true"
	        android:text="" />

	</LinearLayout>    
    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
    	android:text="@string/lbAccountPrefs_PhoneNumber" 
    	android:textColor="@color/colorText"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    />
	<LinearLayout 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    >    

		<EditText
		    android:id="@+id/etAccountPrefs_PhoneNumber"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:inputType="phone"
		    android:singleLine="true"
		    android:text="" />

	</LinearLayout>	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button 
            android:layout_gravity="bottom" 
            android:layout_width="fill_parent" 
            android:layout_weight="1" 
            android:layout_height="50dp" 
            android:text="@string/btSave" 
            android:id="@+id/btAccountPrefs_Save" 
        />
        <Button 
            android:layout_width="fill_parent" 
            android:layout_gravity="bottom" 
            android:layout_weight="1" 
            android:layout_height="50dp" 
            android:text="@string/btCancel" 
            android:id="@+id/btAccountPrefs_Cancel" 
        />
    </LinearLayout>   
</LinearLayout>
